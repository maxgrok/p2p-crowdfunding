<div class="ui container">
<%= link_to "Create New Category", new_category_path %><hr>

<h3>Categories</h3>
<div class="ui four cards">
	<% @categories.each do |category| %>
	<div class="ui card" style="float:left;">
	    <div class="image">
	      <div class="ui blurring inverted dimmer">
	        <div class="content">
	          <div class="center">
	            <div class="ui teal button">Pledge</div>
	          </div>
	        </div>
	      </div>
	        <%= image_tag "placeholderimage.png" %>
	    </div>
	    <div class="content">
	      <div class="header"><%= category.name %></div>
	      <div class="meta"> <%= category.created_at %>
	        <a class="group"><!-- corresponding donor --></a>
	      </div>
	      <div class="description">I'm a category!</div>
	    </div>
	    <div class="extra content"><%= link_to category.name, category_path(category.id), :class=>"right floated created" %>
	    </div>
	  </div>
	<% end %>
	</div>
	</ul>
	</div>
</ul>
</div>

