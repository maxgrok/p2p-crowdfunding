<div class="ui raised very padded text left aligned container segment">
	
	<h1>Sign Up</h1>
	<div class="ui form">
	<%= form_for @user do |f| %>
	<div class="required field">
		<%= f.label "Name" %> 
		<%= f.text_field :name %><br>
		</div>
		<div class="required field">
		<%= f.label "Age" %>
		<%= f.text_field :age %><br>
	</div>
	
		<%= f.submit %>
	<% end %>
</div>	
</div>