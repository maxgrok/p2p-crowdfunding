<div class="ui container">
<%= link_to "Create New User", new_user_path %>
<hr>
<h3>Users</h3>
<div class="ui four cards">
	<% @users.each do |user| %>
	<div class="ui card" style="float:left;">
	    <div class="image">
	      <div class="ui blurring inverted dimmer">
	        <div class="content">
	          <div class="center">
	            <div class="ui teal button">Pledge</div>
	          </div>
	        </div>
	      </div>
	      <%= image_tag "placeholderimage.png" %>
	    </div>
	    <div class="content">
	      <div class="header"><%= link_to user.name, user_path(user.id), :style =>"color:black;"%></div>
	      <div class="meta">
	        <a class="group"><%= user.age %></a>
	      </div>
	      <div class="description">I'm a user!</div>
	    </div>
	    <div class="extra content">
	      <a class="right floated created"><%= link_to "Profile", user %></a>
	      <a class="friends">
	        </a>
	    </div>
	  </div>
	<% end %>
	</div>
	</ul>

</div>

