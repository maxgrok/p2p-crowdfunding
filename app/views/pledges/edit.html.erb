<div class="ui raised very padded text left aligned container segment">
<%= form_for @pledge do |f| %>
	<%= f.label "Amount" %> 
	<%= f.text_field @pledge.amount %>
	<!-- how to display saved dropdowns? -->
	<%= f.collection_select :project, Project.all, @pledge.project_id, :title %> 

	<%= f.submit %>
	<li><%= link_to "Delete This Pledge", @pledge, method: :delete, data: { confirm: "Really?" } %></li>
<% end %></div>