<div class="ui raised very padded text left aligned container segment">
<%= form_for @pledge do |f| %>
	<%= f.label "Amount" %> 
	<p><%= f.text_field :amount %></p>
	
	<p><%= f.collection_select :project_id, Project.all, :id, :title %></p>

	<p><%= f.collection_select :donor_id, User.all, :id, :name %></p>
	<%= f.submit %>
<% end %>
</div>